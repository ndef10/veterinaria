<div class="container-fluid">
  <style>#cabecera { width: 100%;}</style></header>
  
  <div class="row">
    <div class="col-5">
      {{> relleno }} 
      {{> relleno-texto }}
    </div>

    <div class="responsivo col-7 bg-black mt-5 py-5 text-center">
      <h1>Registra a tu mascota</h1>
      <br>

      <form action="/nueva_mascota" method="POST" enctype="multipart/form-data">
        {{!-- <input type="hidden" name="_method" value="PUT"> --}}
        <div>                
          <img id="foto-perfil" src="{{this.foto_mascota}}">                
        </div>
        <div class="form-group">
          <div class="form-group py-3">
            <label>Nombre</label>
            <input type="text" name="nombre_mascota" placeholder="Nombre de tu mascota" class="form-control w-50 m-auto">        
          </div>
          <label>Tipo de mascota</label>
          <select class="form-select mb-3 w-50 m-auto" name="tipo_mascota" aria-label="Default select example" >            
            <option value="domestico">Domestico</option>
            <option value="granja">Granja</option>
            <option value="exotico">Ex√≥tico</option>+
          </select>
          <div class="form-group py-4"> 
            <label>Especie</label>       
            <input type="text" name="especie" placeholder="Ejemplo: 'gato'" class="form-control w-50 m-auto">
          </div>
        </div>
          <div class="form-group col-12 col-sm-12">
            <p class=" text-white mb-2">Foto de perfil</p><br>            
            <input type="file" name="foto" onchange="previewFile()"><br>
            <img src="/" height="200" alt="image preview">
          </div>      
   
          <button class="btn btn-danger my-4 py-2 w-50 m-auto">Siguiente</button>
          <br>
          <a href="./antecedentes">Completa sus antecedentes de salud</a></p>        
      </form>    
    </div>
  </div>
</div>

<script>

  function previewFile() {
    const preview = document.querySelector('img');
    const file = document.querySelector('input[type=file').files[0];
    const reader = new FileReader();

    reader.addEventListener("load", () => {
      preview.src = reader.result;
    }, false);

    if (file) {
      reader.readAsDataURL(file);
    }
  }
  
</script>