<div class="container-fluid">
  <style>#cabecera { width: 100%;}</style>

  <div class="row">
    <div class="col-5">      
      {{> relleno }} 
      {{> relleno-texto }}    
    </div>  

    <div class="responsivo col-7 bg-black mt-5 py-5 text-center pt-5">      
      <h1>Antecedentes de salud {{this.nombreMascota}}</h1>
      <br>
      {{> card_logo}}

      <form action="/antecedentes_de_salud" method="POST" enctype="multipart/form-data">
      <div>                
          <img id="foto-perfil" src="{{this.foto_mascota}}">                
      </div>        
        <div class="form-group">
          <div class="form-group py-3">
            <label for="">Sintomas</label>            
            <textarea class="form-control w-50 m-auto" name="sintomas" placeholder="Sintomas" rows="5" cols="50" maxlength="100"></textarea>
          </div>
          <div class="form-group py-3"> 
            <label for="">Edad</label>       
            <input type="text" name="edad" placeholder="Edad" class="form-control w-50 m-auto">
          </div>
          <div class="form-group py-3"> 
            <label for="">Peso</label>       
            <input type="text" name="peso" placeholder="Peso" class="form-control w-50 m-auto">
          </div>
          <div class="form-group py-3"> 
            <label for="">Tipo de alimentación</label>       
            <input type="text" name="tipo_de_alimentacion" placeholder="Tipo de alimentación" class="form-control w-50 m-auto">
          </div>
        </div>
        <label for="">Tiene sus vacunas al dia?</label>
          <select class="form-select mb-3 w-50 m-auto" name="es_vacunado" aria-label="Default select example">            
            <option value="true">Si</option>
            <option value="false">No</option>
          </select>
        <label for="">Está esterilizado?</label>
          <select class="form-select mb-3 w-50 m-auto" name="es_esterilizado" aria-label="Default select example">                       
            <option value="true">Si</option>
            <option value="false">No</option>
          </select>

          <div class="form-group py-3 mb-3"> 
            <label for="">Ha sido operado?</label>       
            <textarea class="form-control w-50 m-auto" name="operaciones_detalle" placeholder="Detalle de operaciones" rows="3"></textarea>
          </div> 

          <div class="form-group col-12 col-sm-12">
            <p class=" text-white mb-2">Agregar una foto de su estado actual</p><br>            
            <input type="file" name="foto" onchange="previewFile()"><br>          
          </div>

          <button class="btn btn-danger mb-2 py-2 w-50 m-auto my-4">Guardar</button><br>  
          <a href="./lista_especialistas">Elige un especialista</a></p>          
      </form>
    </div>
  </div>
</div>

<script>
  function previewFile() {
    const preview = document.getElementById('pw');
    const file = document.querySelector('input[type=file').files[0];
    const reader = new FileReader();
    reader.addEventListener("load", () => {
      preview.src = reader.result;
    }, false);
    if (file) {
      reader.readAsDataURL(file);
    }
  }
  
</script>