<div class="container-fluid">
    <style>#cabecera { width: 100%;}</style>

    <div class="row">
        <div class="col-6">      
            {{> relleno }} 
            {{> relleno-texto }}         
        </div>  

        <div class="responsivo col-6 bg-black mt-5 py-5 text-center pt-5">
            <h1>Datos tutor</h1>
            <br>

            <form action="/datos_tutor/{{this.cedula_de_identidad}}?-method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <div>                
                        <img id="foto-perfil" src="{{this.foto_tutor}}">                
                    </div>
                    <div class="form-group py-3">
                        <label>Nombre</label> 
                        <input type="text" name="nombre_tutor" class="form-control w-50 m-auto" value={{this.nombre_tutor}}>        
                    </div>
                    <div class="form-group py-3"> 
                        <label>Cedula de identidad</label>      
                        <input type="text" name="cedula_de _identidad" class="form-control w-50 m-auto" value={{this.cedula_de_identidad}}>
                    </div>
                    <div class="form-group py-3"> 
                        <label>Correo</label>       
                        <input type="text" name="correo_tutor" class="form-control w-50 m-auto" value={{this.correo_tutor}}>
                    </div>                   
                               
                    <button class="btn btn-success my-3 py-2 w-50 m-auto">Actualizar</button> 
                </div>       
            </form> 

            <div>
                <form action="/eliminar/{{this.ci}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger mb-2 py-2 w-50 m-auto">Eliminar cuenta</button>    
                </form>
            </div>
            <br>       
            <a href="./datos-mascota">Ver los datos de tu mascota</a> 

        </div>
    </div>
</div>


