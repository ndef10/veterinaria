<div class="container-fluid">
  <style>#cabecera { width: 100%;}</style>

  <div class="row">
    <div class="col-5">      
      {{> relleno }} 
      {{> relleno-texto }}    
    </div>  

    <div class="responsivo col-7 bg-black mt-5 py-5 text-center">
      <h1>Hola {{this.nombre}}!!</h1>
      <h2>Completa tu perfil</h2>
      <br>

      <form action="/actualizar/{{this.ci}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <div class="form-group pt-4">        
            <input type="text" name="correo" placeholder="Correo" class="form-control w-50 m-auto">
          </div>
          <div class="form-group py-4">        
            <input type="text" name="credenciales" placeholder="Credenciales" class="form-control w-50 m-auto">
          </div>         
        </div>
        <select class="form-select mb-3 w-50 m-auto" aria-label="Default select example" >
          <option selected>Selecciona tu especialidad</option>
          <option value="1">Domestico</option>
          <option value="2">Granja</option>
          <option value="3">Ex√≥tico</option>
        </select>
        <button class="btn btn-danger my-3 py- w-50 m-auto">Guardar</button>   
      </form>
    </div>
  </div>
</div>


