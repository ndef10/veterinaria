<div class="container-fluid">
  <style>#cabecera { width: 100%;}</style>

  <div class="row">
    <div class="col-5">      
      {{> relleno }} 
      {{> relleno-texto }}    
    </div>  

    <div class="responsivo col-7 bg-black mt-5 py-5 text-center">
      <h1>Hola {{this.nombre_especialista}}!!</h1>
      <h2>Crear cuenta especialista</h2>
      <br>

      <form action="/nuevo_especialista" method="POST" enctype="multipart/form-data">
      {{> card_logo}}  
    
        <div class="form-group">
           <div class="form-group">       
            <input type="text"  name="nombre_especialista" placeholder="Nombre" class="form-control w-50 m-auto" />
          </div>
          <div class="form-group pt-5">       
            <input type="text" name="cedula_de_identidad" placeholder="ci" class="form-control w-50 m-auto" />
          </div>          
          <div class="form-group pt-4">        
            <input type="text" name="correo_especialista" placeholder="Correo" class="form-control w-50 m-auto">
          </div>
          <div class="form-group pt-4">        
            <input type="password" name="contrasena_especialista" placeholder="Contreseña" class="form-control w-50 m-auto">
          </div>
          <div class="form-group pt-4">        
            <input type="password" name="repita_contrasena" placeholder="Repita contreseña" class="form-control w-50 m-auto">
          </div>
          <div class="form-group py-4">        
            <input type="text" name="credenciales" placeholder="Credenciales" class="form-control w-50 m-auto">
          </div>         
        </div>
        <select class="form-select mb-3 w-50 m-auto" name="especialidad" aria-label="Default select example">          
          <option value="domestico">Domestico</option>
          <option value="granja">Granja</option>
          <option value="exotico">Exótico</option>
        </select>

        <div class="form-group col-12 col-sm-12">
          <p class="text-white pb-3">Sube tu foto de perfil</p><br>            
          <input type="file" name="foto" onchange="previewFile()"><br>          
        </div>

        <button class="btn btn-danger my-3 py- w-50 m-auto">Guardar</button>
        <br>
        <p>¿Ya estás registrado? <a href="./inicio_sesion_especialista">Inicia sesion</a></p>   
      </form>
    </div>
  </div>
</div>

<script>

  function previewFile() {
    const preview = document.getElementById('pw');
    const file = document.querySelector('input[type=file').files[0];
    const reader = new FileReader();

    reader.addEventListener("load", () => {
      preview.src = reader.result;
    }, false);

    if (file) {
      reader.readAsDataURL(file);
    }
  }
  
</script>


