<div class="container-fluid ">
  <style>#cabecera { width: 100%;}</style>

  <div class="row">
    <div class="col-6 mt-5"> 
      <img src="{{this.foto_mascota}}" height="100%" Width="100%"> 
    </div>
    <div class="responsivo col-6 bg-black mt-5 py-5 text-center">
      <h1>Datos de tu mascota{{this.nombre_mascota}}</h1>
      <br>

      <form action="/datos_mascota/{{this.id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <div>                
            <img id="foto-perfil" src="{{this.foto_mascota}}">                
          </div>
          <div class="form-group py-3">
            <label>Especie</label> 
            <input type="text" name="especie" class="form-control w-50 m-auto" value={{this.especie}}>        
          </div>
          <div class="form-group py-3"> 
            <label>Edad al momento de la consulta</label>      
            <input type="text" name="edad" class="form-control w-50 m-auto" value={{this.edad}}>
          </div>
          <div class="form-group py-3"> 
            <label>Peso al momento de la consulta</label>       
            <input type="text" name="peso" class="form-control w-50 m-auto" value={{this.peso}}>
          </div>
          <div class="form-group py-3">  
            <label>Tipo de alimentacion</label>      
            <input type="text" name="tipo_de_alimentacion" class="form-control w-50 m-auto" value={{this.tipo_de_alimentacion}}>
          </div>
          <div class="form-group py-3">  
            <label>Esterilizado</label>      
            <input type="text" name="esterilizado" class="form-control w-50 m-auto" value={{this.es_esterilizado}}>
          </div>
          <div class="form-group py-3">  
            <label>Vacunas al dia</label>      
            <input type="text" name="vacunas" class="form-control w-50 m-auto" value={{this.es_vacunado}}>
          </div>
          <div class="form-group py-3">  
            <label>Detalle de operaciones</label>      
            <input type="text" name="operaciones_detalle" class="form-control w-50 m-auto" value={{this.operaciones_detalle}}>
          </div>          
        </div> 
        <button class="btn btn-success my-3 py-2 w-50 m-auto">Actualizar</button>     
      </form> 
      <div>
        <form action="/eliminar_datos_mascota/{{this.ci}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger mb-2 py-2 w-50 m-auto">Eliminar cuenta</button>    
        </form>
        </div>
          <br>       
          <a href="./lista-especialistas">Ver lista de especialistas</a> 
        </div>
      </div>
    </div> 
  </div>
</div>


