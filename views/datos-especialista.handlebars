<div class="container-fluid ">
    <style>#cabecera { width: 100%;}</style>

    <div class="row">
        <div class="col-5 mt-5"> 
            <img src="{{this.foto_especialista}}" height="100%" Width="100%"> 
        </div> 
        
        <div class="responsivo col-7 bg-black mt-5 py-5 text-center">             
            <h1>Tus datos</h1>
            <br>

            <form action="/actualizar/{{this.ci}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <div>                
                        <img id="foto-perfil" src="{{this.foto_especialista}}" height="55" Width="75">                
                    </div>
                    <div class="form-group py-3">
                        <label>Nombre</label> 
                        <input type="text" name="nombre" class="form-control w-50 m-auto" value={{this.nombre_especialista}}>        
                    </div>
                    <div class="form-group py-3"> 
                        <label>Cedula de identidad</label>      
                        <input type="text" name="ci" class="form-control w-50 m-auto" value={{this.ci_especialista}}>
                    </div>
                    <div class="form-group py-3"> 
                        <label>Correo</label>       
                        <input type="text" name="correo" class="form-control w-50 m-auto" value={{this.correo_especialista}}>
                    </div>
                    <div class="form-group py-3"> 
                        <label>Credenciales</label>       
                        <input type="text" name="correo" class="form-control w-50 m-auto" value={{this.credenciales}}>
                    </div>                
                    <div class="form-group py-3">  
                        <label>Especialidad</label>      
                        <input type="text" name="nombre_mascota" class="form-control w-50 m-auto" value={{this.especialidad}}>
                    </div>             
          
                    <button class="btn btn-success my-3 py-2 w-50 m-auto">Actualizar</button> 
                </div>       
            </form> 
            <div>
                <form action="/eliminar/{{this.ci}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger mb-2 py-2 w-50 m-auto">Eliminar cuenta</button>    
                </form>    
            </div>
        </div>
    </div>
</div>